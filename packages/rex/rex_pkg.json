{
  "$schema": "../../schemas/rex_pkg.json",
  "publish": {
    "actions": [
      {
        "run": "deno task bundle",
        "performFor": ["npm"]
      },
      {
        "name": "Generate types",
        "run": "tsc *.js --declaration --allowJs --emitDeclarationOnly",
        "performFor": ["npm"]
      },
      {
        "run": "deno task npm",
        "performFor": ["npm"]
      },
      {
        "name": "npm test",
        "run": "node index.js",
        "performFor": ["npm"]
      }
    ]
  }
}
